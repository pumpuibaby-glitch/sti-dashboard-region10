    <script>
        (function() {
            'use strict';
            
            const CHART_FONT_FAMILY = "'Sarabun', sans-serif";
            const COLOR_PRIMARY = '#0066cc';
            const COLOR_PRIMARY_DARK = '#004c99';
            const COLOR_PRIMARY_LIGHT = '#66b3ff';
            const COLOR_SECONDARY = '#007ffb';
            const COLOR_ACCENT = '#dc3545';
            const COLOR_NATIONAL = '#6c757d';
            
