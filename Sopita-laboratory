            function sumCases(districtData) {
                return Object.values(districtData).reduce((sum, val) => sum + val, 0);
            }
            
            const DATA_2_2_PROVINCE = {
                labels: ['อุบลราชธานี', 'ศรีสะเกษ', 'ยโสธร', 'อำนาจเจริญ', 'มุกดาหาร'],
                values: [
                    sumCases(DATA_2_2_RAW['อุบลราชธานี']),
                    sumCases(DATA_2_2_RAW['ศรีสะเกษ']),
                    sumCases(DATA_2_2_RAW['ยโสธร']),
                    sumCases(DATA_2_2_RAW['อำนาจเจริญ']),
                    sumCases(DATA_2_2_RAW['มุกดาหาร'])
                ]
            };

            function populateDistrictTable(provinceKey, tableId) {
                const tableBody = document.getElementById(tableId);
                if (!tableBody) return;
                
                const districts = Object.entries(DATA_2_2_RAW[provinceKey])
                    .sort(([, casesA], [, casesB]) => casesB - casesA); 
                    
                tableBody.innerHTML = ''; 
                
                districts.forEach(([name, cases]) => {
                    const row = `<tr>
                        <td class="px-4 py-2 whitespace-nowrap text-sm font-medium text-gray-900">${name}</td>
                        <td class="px-4 py-2 whitespace-nowrap text-sm text-gray-700 text-right font-semibold">${cases}</td>
                    </tr>`;
                    tableBody.innerHTML += row;
                });
            }

            function init5YearTrendChart() {
