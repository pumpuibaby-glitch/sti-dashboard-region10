                            { label: '2567', data: DATA_1_2['2567'], borderColor: '#0066cc', backgroundColor: 'rgba(0, 102, 204, 0.1)', tension: 0.1, borderWidth: 2 },
                            { label: '2566', data: DATA_1_2['2566'], borderColor: '#007ffb', backgroundColor: 'rgba(0, 127, 251, 0.1)', tension: 0.1, borderWidth: 2, borderDash: [5, 5] },
                            { label: '2565', data: DATA_1_2['2565'], borderColor: '#66b3ff', backgroundColor: 'rgba(102, 179, 255, 0.1)', tension: 0.1, borderWidth: 1.5, borderDash: [5, 5] },
                            { label: '2564', data: DATA_1_2['2564'], borderColor: '#6c757d', backgroundColor: 'rgba(108, 117, 125, 0.1)', tension: 0.1, borderWidth: 1.5, borderDash: [5, 5] }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        ...TOOLTIP_CALLBACKS,
