            };

            const DATA_3_2 = {
                labels: [
                    'Ceftriaxone', 'Cefixime', 'Azithromycin', 
                    'Ciprofloxacin', 'Penicillin', 'Spectinomycin', 'Tetracycline'
                ].map(processLabel),
                s: [100, 100, 100, 0, 0, 100, 0],
                i: [0, 0, 0, 0, 0, 0, 0],
